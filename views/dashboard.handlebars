<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  {{#if Posts.length}}
  <div class="col-md-6 project-list">
    <h3>Your Posts:</h3>

    {{#each Posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
    <p>
    <a href= "/create"><button class="btn btn-primary">Create a Post</button></a>
  </p>
</div>

<script src="./js/dashboard.js"></script>